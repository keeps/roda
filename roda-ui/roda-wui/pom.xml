<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <name>roda-wui</name>
    <artifactId>roda-wui</artifactId>
    <parent>
        <groupId>org.roda-project</groupId>
        <artifactId>roda-ui</artifactId>
        <version>5.7.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>
    <properties>
        <gwt.module.main>org.roda.wui.RodaWUI</gwt.module.main>
        <gwt.module.portal>org.roda.wui.RodaWUIPortal</gwt.module.portal>
    </properties>
    <packaging>war</packaging>
    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>

                    <!-- GWT Maven Plugin -->
                    <plugin>
                        <groupId>net.ltgt.gwt.maven</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <configuration>
                            <skipCompilation>false</skipCompilation>
                        </configuration>
                        <executions>
                            <execution>
                                <id>${gwt.module.main}</id>
                                <configuration>
                                    <moduleName>${gwt.module.main}</moduleName>
                                </configuration>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>${gwt.module.portal}</id>
                                <configuration>
                                    <moduleName>${gwt.module.portal}</moduleName>
                                </configuration>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>pl.project13.maven</groupId>
                        <artifactId>git-commit-id-plugin</artifactId>
                        <configuration>
                            <failOnNoGitDirectory>false</failOnNoGitDirectory>
                        </configuration>
                    </plugin>

                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                        <version>${springboot.version}</version>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>debug-main-local</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                        <version>${springboot.version}</version>
                        <configuration>
                            <skip>false</skip>
                            <directories>
                                <directory>${project.build.directory}/${project.build.finalName}</directory>
                            </directories>
                            <environmentVariables>
                                <RODA_CORE_SOLR_CLOUD_URLS>localhost:2181</RODA_CORE_SOLR_CLOUD_URLS>
                            </environmentVariables>
                            <jvmArguments>
                                -Dserver.port=8082
                                -Droda.distributed.mode.type=LOCAL
                                -Droda.home=${env.HOME}/.roda_local
                                -Droda.environment.collect.version=false
                                -Dgwt.codeServerPort=9876 -Xdebug
                                <!-- Remove after upgrade to spring-boot 3-->
                                -Dorg.springframework.boot.logging.LoggingSystem=none
                                -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=*:5007
                                --add-opens java.base/java.util=ALL-UNNAMED
                                --add-opens java.base/java.lang=ALL-UNNAMED
                            </jvmArguments>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>net.ltgt.gwt.maven</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <configuration>
                            <moduleName>${gwt.module.main}</moduleName>
                            <launcherDir>${project.build.directory}/${project.build.finalName}</launcherDir>

                            <classpathScope>compile+runtime</classpathScope>
                            <skipCompilation>false</skipCompilation>
                            <draftCompile>true</draftCompile>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>debug-main-central</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                        <version>${springboot.version}</version>
                        <configuration>
                            <skip>false</skip>
                            <directories>
                                <directory>${project.build.directory}/${project.build.finalName}</directory>
                            </directories>
                            <environmentVariables>
                                <RODA_CORE_SOLR_CLOUD_URLS>localhost:2182</RODA_CORE_SOLR_CLOUD_URLS>
                            </environmentVariables>
                            <jvmArguments>
                                -Dserver.port=8081
                                -Droda.distributed.mode.type=CENTRAL
                                -Droda.home=${env.HOME}/.roda_central
                                -Droda.environment.collect.version=false
                                -Dgwt.codeServerPort=9876 -Xdebug
                                <!-- Remove after upgrade to spring-boot 3-->
                                -Dorg.springframework.boot.logging.LoggingSystem=none
                                -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=*:5006
                                --add-opens java.base/java.util=ALL-UNNAMED
                                --add-opens java.base/java.lang=ALL-UNNAMED
                            </jvmArguments>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>net.ltgt.gwt.maven</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <configuration>
                            <moduleName>${gwt.module.main}</moduleName>
                            <launcherDir>${project.build.directory}/${project.build.finalName}</launcherDir>

                            <classpathScope>compile+runtime</classpathScope>
                            <skipCompilation>false</skipCompilation>
                            <draftCompile>true</draftCompile>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>debug-main</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                        <version>${springboot.version}</version>
                        <configuration>
                            <environmentVariables>
                                <SIEGFRIED_MODE>server</SIEGFRIED_MODE>
                                <SIEGFRIED_SERVER_URL>http://localhost:5138</SIEGFRIED_SERVER_URL>
                                <JDK_JAVA_OPTIONS>--add-opens java.base/java.util=ALL-UNNAMED</JDK_JAVA_OPTIONS>
                            </environmentVariables>
                            <skip>false</skip>
                            <additionalClasspathElements>
                                <additionalClasspathElement>
                                    ${project.build.directory}/${project.build.finalName}
                                </additionalClasspathElement>
                            </additionalClasspathElements>
                            <jvmArguments>
                                -Dgwt.codeServerPort=9876 -Xdebug
                                <!-- Remove after upgrade to spring-boot 3-->
                                -Dorg.springframework.boot.logging.LoggingSystem=none
                                <!-- Remove -->
                                -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=*:5005
                                -Droda.environment.collect.version=false
                                --add-opens java.base/java.util=ALL-UNNAMED
                                --add-opens java.base/java.lang=ALL-UNNAMED
                            </jvmArguments>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>net.ltgt.gwt.maven</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <version>1.0.1</version>
                        <extensions>true</extensions>
                        <configuration>
                            <moduleName>${gwt.module.main}</moduleName>
                            <launcherDir>${project.build.directory}/${project.build.finalName}</launcherDir>
                            <classpathScope>test</classpathScope>
                            <skipCompilation>false</skipCompilation>
                            <draftCompile>true</draftCompile>
                            <style>PRETTY</style>
                            <forceCompilation>true</forceCompilation>
                            <environmentVariables>
                                <JDK_JAVA_OPTIONS>
                                    --add-opens java.base/java.util=ALL-UNNAMED
                                </JDK_JAVA_OPTIONS>
                            </environmentVariables>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>debug-portal</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                        <version>${springboot.version}</version>
                        <configuration>
                            <skip>false</skip>
                            <jvmArguments>
                                -Dgwt.codeServerPort=9876 -Xdebug
                                -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=*:5005
                            </jvmArguments>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>net.ltgt.gwt.maven</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <configuration>
                            <moduleName>${gwt.module.portal}</moduleName>
                            <launcherDir>${project.build.directory}/${project.build.finalName}</launcherDir>

                            <skipCompilation>false</skipCompilation>
                            <draftCompile>true</draftCompile>
                            <style>PRETTY</style>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>pl.project13.maven</groupId>
                        <artifactId>git-commit-id-plugin</artifactId>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

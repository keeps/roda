                            </jvmArguments>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>net.ltgt.gwt.maven</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <configuration>
                            <moduleName>${gwt.module.main}</moduleName>

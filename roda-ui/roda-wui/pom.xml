    <modelVersion>4.0.0</modelVersion>
    <name>roda-wui</name>
    <artifactId>roda-wui</artifactId>
    <parent>
        <groupId>org.roda-project</groupId>
        <artifactId>roda-ui</artifactId>
        <version>5.1.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>
    <properties>
        <gwt.module.main>org.roda.wui.RodaWUI</gwt.module.main>
        <gwt.module.portal>org.roda.wui.RodaWUIPortal</gwt.module.portal>
    </properties>
    <packaging>war</packaging>
    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>

                    <!-- GWT Maven Plugin -->
                    <plugin>
                        <groupId>net.ltgt.gwt.maven</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <configuration>
                            <skipCompilation>false</skipCompilation>
                        </configuration>
                        <executions>
                            <execution>
                                <id>${gwt.module.main}</id>
                                <configuration>
                                    <moduleName>${gwt.module.main}</moduleName>
                                </configuration>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>${gwt.module.portal}</id>
                                <configuration>
                                    <moduleName>${gwt.module.portal}</moduleName>
                                </configuration>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>pl.project13.maven</groupId>
                        <artifactId>git-commit-id-plugin</artifactId>
                        <configuration>
                            <failOnNoGitDirectory>false</failOnNoGitDirectory>
                        </configuration>
                    </plugin>

                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                        <version>${springboot.version}</version>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>roda-wui-docker</id>
            <build>
                <plugins>
                    <!-- GWT Maven Plugin -->
                    <plugin>
                        <groupId>net.ltgt.gwt.maven</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <executions>
                            <execution>
                                <id>${gwt.module.main}</id>
                                <configuration>
                                    <moduleName>${gwt.module.main}</moduleName>
                                    <skipCompilation>false</skipCompilation>
                                </configuration>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>${gwt.module.portal}</id>
                                <configuration>
                                    <moduleName>${gwt.module.portal}</moduleName>
                                    <skipCompilation>false</skipCompilation>
                                </configuration>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- Docker build -->
                    <plugin>
                        <groupId>com.spotify</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <configuration>
                            <forceTags>true</forceTags>
                            <imageName>keeps/roda</imageName>
                            <imageTags>
                                <imageTag>${project.version}</imageTag>
                                <imageTag>latest</imageTag>
                            </imageTags>
                            <dockerDirectory>${project.basedir}/docker-files</dockerDirectory>
                            <resources>
                                <resource>
                                    <targetPath>/ROOT</targetPath>
                                    <directory>${project.build.directory}/${project.build.finalName}</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>pl.project13.maven</groupId>
                        <artifactId>git-commit-id-plugin</artifactId>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>debug-main-local</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                        <version>${springboot.version}</version>
                        <configuration>
                            <skip>false</skip>
                            <directories>
                                <directory>${project.build.directory}/${project.build.finalName}</directory>
                            </directories>
                            <environmentVariables>
                                <RODA_CORE_SOLR_CLOUD_URLS>localhost:2181</RODA_CORE_SOLR_CLOUD_URLS>
                            </environmentVariables>
                            <jvmArguments>
                                -Dserver.port=8082
                                -Droda.distributed.mode.type=LOCAL
                                -Droda.home=${env.HOME}/.roda_local
                                -Dgwt.codeServerPort=9876 -Xdebug
                                <!-- Remove after upgrade to spring-boot 3-->
                                -Dorg.springframework.boot.logging.LoggingSystem=none
                                -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=*:5007
                                --add-opens java.base/java.util=ALL-UNNAMED
                            </jvmArguments>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>net.ltgt.gwt.maven</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <configuration>
                            <moduleName>${gwt.module.main}</moduleName>
                            <launcherDir>${project.build.directory}/${project.build.finalName}</launcherDir>

                            <classpathScope>compile+runtime</classpathScope>
                            <skipCompilation>false</skipCompilation>
                            <draftCompile>true</draftCompile>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

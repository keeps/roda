<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:u="urn:import:org.roda.wui.client.disposal">

    <ui:with field='messages' type='config.i18n.client.ClientMessages' />

    <ui:style>
        .section {
        margin-top: 20px;
        }
    </ui:style>

    <g:FlowPanel styleName="wui-disposal-hold-data" addStyleNames="wrapper skip_padding">
        <g:FlowPanel addStyleNames="row full_width no_padding">
            <g:FlowPanel addStyleNames="wui-data-panel">
                <g:FlowPanel addStyleNames="wui-error-panel">
                    <g:HTML ui:field="errors"></g:HTML>
                </g:FlowPanel>
                <g:Label addStyleNames="form-label">
                    <ui:text from='{messages.disposalHoldTitle}' />
                </g:Label>
                <g:TextBox title="{messages.disposalHoldTitle}" ui:field="title" addStyleNames="form-textbox" />
                <g:Label ui:field="titleError" addStyleNames="form-label-error"></g:Label>
                <g:Label addStyleNames="form-label">
                    <ui:text from='{messages.disposalHoldDescription}' />
                </g:Label>
                <g:TextBox title="{messages.disposalHoldDescription}" ui:field="description" addStyleNames="form-textbox" />
                <g:Label addStyleNames="form-label">
                    <ui:text from='{messages.disposalHoldMandate}' />
                </g:Label>
                <g:TextBox title="{messages.disposalHoldMandate}" ui:field="mandate" addStyleNames="form-textbox" />
                <g:Label addStyleNames="form-label">
                    <ui:text from='{messages.disposalHoldNotes}' />
                </g:Label>
                <g:TextArea title="{messages.disposalHoldNotes}" ui:field="notes" addStyleNames="form-textbox disposalScopeNotes" />
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>

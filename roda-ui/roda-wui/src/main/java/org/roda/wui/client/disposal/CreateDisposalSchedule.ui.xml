<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:common="urn:import:org.roda.wui.client.common">

    <ui:with field='messages' type='config.i18n.client.ClientMessages'/>

    <g:FlowPanel styleName="wui-representation-information-network" addStyleNames="wrapper skip_padding">
        <g:FlowPanel addStyleNames="row full_width skip_padding">
            <g:FlowPanel addStyleNames="col_10 content" ui:field="content">
                <common:TitlePanel text="{messages.disposalConfirmationsTitle}" iconClass="DisposalConfirmations"/>
                <g:FlowPanel addStyleNames="page-description" ui:field="disposalConfirmationDescription"></g:FlowPanel>
            </g:FlowPanel>

            <g:FlowPanel addStyleNames="col_2 last sidebar">
                <g:FlowPanel addStyleNames="sticky-flow">
                    <g:FlowPanel addStyleNames="sticky-padding">
                        <g:Label addStyleNames="h4">
                            <ui:text from="{messages.actions}"/>
                        </g:Label>
                        <g:Button addStyleNames="btn btn-block btn-play" ui:field="buttonApply">
                            <ui:text from='{messages.disposalNewConfirmationAction}'/>
                        </g:Button>
                    </g:FlowPanel>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>

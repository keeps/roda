<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:common="urn:import:org.roda.wui.client.common">

    <ui:with field='messages' type='config.i18n.client.ClientMessages'/>
    <g:FlowPanel styleName="wui-user-data" addStyleNames="wrapper skip_padding">
        <g:FlowPanel addStyleNames="row full_width skip_padding">
            <g:FlowPanel addStyleNames="col_10 content" ui:field="content">
                <common:TitlePanel ui:field="titlePanel"/>
                <g:FlowPanel addStyleNames="page-description" ui:field="disposalPolicyAIPDescription">
                    <g:Label>
                            <ui:text from='{messages.disposalAssociationDescription}'/>
                    </g:Label>
                </g:FlowPanel>
                <g:Label styleName="h5">
                        <ui:text from='{messages.showDisposalScheduleTitle}'/>
                </g:Label>
                <g:FlowPanel addStyleNames="wui-data-panel" ui:field="disposalSchedule">
                    <g:FlowPanel styleName="field">
                        <g:Label styleName="label">
                            <ui:text from='{messages.disposalScheduleTitle}'/>
                        </g:Label>
                        <g:Label styleName="value" ui:field="disposalName"/>
                    </g:FlowPanel>
                    <g:FlowPanel styleName="field">
                        <g:Label styleName="label">
                            <ui:text from='{messages.disposalRetentionStartDateLabel}'/>
                        </g:Label>
                        <g:Label styleName="value" ui:field="disposalRetentionStartDate"/>
                    </g:FlowPanel>
                    <g:FlowPanel styleName="field">
                        <g:Label styleName="label">
                            <ui:text from='{messages.disposalRetentionDueDateLabel}'/>
                        </g:Label>
                        <g:Label styleName="value" ui:field="disposalRetentionDueDate"/>
                    </g:FlowPanel>
                    <g:FlowPanel styleName="field">
                        <g:Label styleName="label">
                            <ui:text from='{messages.disposalRetentionPeriodLabel}'/>
                        </g:Label>
                        <g:Label styleName="value" ui:field="disposalRetentionPeriod"/>
                    </g:FlowPanel>
                    <g:FlowPanel styleName="field">
                        <g:Label styleName="label">
                            <ui:text from='{messages.disposalActionLabel}'/>
                        </g:Label>
                        <g:Label styleName="value" ui:field="disposalDisposalAction"/>
                    </g:FlowPanel>
                    <g:FlowPanel styleName="field">
                        <g:Label styleName="label">
                            <ui:text from='{messages.disposalStatusLabel}'/>
                        </g:Label>
                        <g:Label styleName="value" ui:field="disposalDisposalStatus"/>
                    </g:FlowPanel>
                </g:FlowPanel>
                <g:FlowPanel addStyleNames="wui-data-panel" ui:field="disposalHolds">
                    <g:Label styleName="h5">
                            <ui:text from='{messages.showDisposalHoldTitle}'/>
                    </g:Label>
                    <g:FlowPanel ui:field="disposalHoldsPanel" />
                </g:FlowPanel>
            </g:FlowPanel>
            <g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel addStyleNames="sticky-flow">
					<g:FlowPanel addStyleNames="sticky-padding">
						<g:SimplePanel addStyleNames="sidebar-group" ui:field="actionsSidebar" />
					</g:FlowPanel>
				</g:FlowPanel>
			</g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>

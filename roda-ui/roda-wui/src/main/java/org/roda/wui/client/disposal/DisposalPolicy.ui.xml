<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:common="urn:import:org.roda.wui.client.common">

    <ui:with field='messages' type='config.i18n.client.ClientMessages'/>
    <g:FlowPanel styleName="wui-disposal-policy" addStyleNames="wrapper skip_padding">

        <g:FlowPanel addStyleNames="row full_width skip_padding">
            <g:FlowPanel ui:field="contentFlowPanel" addStyleNames="col_10">
                <common:TitlePanel text="{messages.disposalPolicyTitle}" iconClass="DisposalPolicy"/>
                <g:FlowPanel addStyleNames="page-description" ui:field="disposalPolicyDescription"></g:FlowPanel>
                <g:FlowPanel ui:field="contentDisposalSchedulesTable">
                </g:FlowPanel>
                <g:FlowPanel ui:field="newDisposalSchedule">
                </g:FlowPanel>
                <g:FlowPanel ui:field="contentDisposalHoldsTable">
                </g:FlowPanel>
                <g:FlowPanel ui:field="newDisposalHold">
                </g:FlowPanel>
            </g:FlowPanel>
            <g:FlowPanel ui:field="sidebarFlowPanel" addStyleNames="col_2 last sidebar">
                <g:FlowPanel addStyleNames="sticky-flow">
                    <g:FlowPanel addStyleNames="sticky-padding">
                        <g:Label addStyleNames="h4">
                            <ui:text from="{messages.actions}"/>
                        </g:Label>
                        <g:FlowPanel ui:field="buttonsPanel"></g:FlowPanel>
                    </g:FlowPanel>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
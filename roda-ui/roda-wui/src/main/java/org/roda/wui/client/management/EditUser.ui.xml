<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:u="urn:import:org.roda.wui.client.management"
	xmlns:common="urn:import:org.roda.wui.client.common">

	<ui:with field='messages' type='config.i18n.client.ClientMessages' />

	<g:FlowPanel styleName="wui-management-user" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<common:TitlePanel text="{messages.editUserTitle}" iconClass="User" />
				<u:UserDataPanel ui:field="userDataPanel" />
				<g:FlowPanel ui:field="accessKeyTablePanel" />
			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel addStyleNames="sticky-flow">
					<g:FlowPanel addStyleNames="sticky-padding">
						<g:Label addStyleNames="h4">
							<ui:text from="{messages.actions}" />
						</g:Label>
						<g:Button addStyleNames="btn btn-block btn-play" ui:field="buttonApply">
							<ui:text from='{messages.editUserApply}' />
						</g:Button>
						<g:Button addStyleNames="btn btn-block btn-check btn-user-activation" ui:field="buttonDeActivate">
							<ui:text from='{messages.editUserActivate}' />
						</g:Button>
						<g:Button addStyleNames="btn btn-block btn-key" ui:field="buttonAddAccessKey">
							<ui:text from='{messages.addAccessKeyButton}' />
						</g:Button>
						<g:Button addStyleNames="btn btn-block btn-danger btn-ban btn-user-activation"
							ui:field="buttonRemove">
							<ui:text from='{messages.editUserRemove}' />
						</g:Button>
						<g:Button addStyleNames="btn btn-block btn-default btn-times-circle"
							ui:field="buttonCancel">
							<ui:text from='{messages.editUserCancel}' />
						</g:Button>
					</g:FlowPanel>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>

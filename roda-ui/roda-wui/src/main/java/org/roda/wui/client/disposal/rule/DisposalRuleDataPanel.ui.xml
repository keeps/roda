<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:org.roda.wui.client.ingest.process"
>

    <ui:with field='messages' type='config.i18n.client.ClientMessages'/>

    <ui:style>
        .section {
        margin-top: 20px;
        }
    </ui:style>

    <g:FlowPanel styleName="wui-disposal-rule-data" addStyleNames="wrapper skip_padding">
        <g:FlowPanel addStyleNames="row full_width no_padding">
            <g:FlowPanel addStyleNames="wui-data-panel">
                <g:FlowPanel addStyleNames="wui-error-panel">
                    <g:HTML ui:field="errors"></g:HTML>
                </g:FlowPanel>
                <g:Label addStyleNames="form-label">
                    <ui:text from='{messages.disposalRuleTitle}'/>
                </g:Label>
                <g:TextBox title="{messages.disposalRuleTitle}" ui:field="title" addStyleNames="form-textbox"/>
                <g:Label ui:field="titleError" addStyleNames="form-label-error"></g:Label>
                <g:Label addStyleNames="form-label">
                    <ui:text from='{messages.disposalRuleDescription}'/>
                </g:Label>
                <g:TextArea title="{messages.disposalRuleDescription}" ui:field="description"
                            addStyleNames="form-textbox disposalRuleDescription"/>
                <g:Label addStyleNames="form-label" ui:field="disposalSchedulesListLabel"></g:Label>
                <g:Label ui:field="disposalSchedulesListError" addStyleNames="form-label-error"></g:Label>
                <g:ListBox addStyleNames="form-textbox" ui:field="disposalSchedulesList"/>

                <g:Label ui:field="typeListLabel" addStyleNames="form-label"></g:Label>
                <g:Label ui:field="typeListError" addStyleNames="form-label-error"></g:Label>
                <g:ListBox addStyleNames="form-textbox" ui:field="typeList"/>

                <g:Label ui:field="conditionLabel" addStyleNames="form-label">
                    <ui:text from='{messages.disposalRuleCondition}'/>
                </g:Label>
                <g:Label ui:field="conditionError" addStyleNames="form-label-error"></g:Label>
                <g:FlowPanel ui:field="conditionPanel">
                    <g:FlowPanel addStyleNames="col_2">
                        <g:ListBox addStyleNames="form-textbox" ui:field="fieldsList">
                        </g:ListBox>
                    </g:FlowPanel>
                    <g:FlowPanel addStyleNames="disposalRuleOperator col_1">
                        <g:Label addStyleNames="form-label">
                            <ui:text from='{messages.disposalRuleIs}'/>
                        </g:Label>
                    </g:FlowPanel>
                    <g:FlowPanel addStyleNames="col_3">
                        <g:TextBox title="{messages.disposalRuleCondition}" ui:field="fieldValue"
                                   addStyleNames="form-textbox"/>
                    </g:FlowPanel>
                </g:FlowPanel>
                <p:PluginParameterPanel ui:field="pluginParameterPanel"></p:PluginParameterPanel>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>

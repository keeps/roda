<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:m="urn:import:pt.gov.dgarq.roda.wui.main.client"
	xmlns:common="urn:import:pt.gov.dgarq.roda.wui.common.client.widgets">

	<ui:style>
	.browse {
		display: -webkit-box; /* OLD - iOS 6-, Safari 3.1-6 */
		display: -moz-box; /* OLD - Firefox 19- (buggy but mostly works) */
		display: -ms-flexbox; /* TWEENER - IE 10 */
		display: flex;
		justify-content: space-between;
		min-height: 600px;
	}
	
	.content {
		padding: 40px;
		width: 100%;
	}
	
	.item_icon {
		
	}
	
	.sidebar {
		background-color: #eee;
		padding: 40px;
		width: 0%;
		min-width: 200px;
		-webkit-box-flex: 1; /* OLD - iOS 6-, Safari 3.1-6 */
		-moz-box-flex: 1; /* OLD - Firefox 19- */
		-webkit-flex: 1; /* Chrome */
		-ms-flex: 1; /* IE 10 */
		flex: 1; /* NEW, Spec - Opera 12.1, Firefox 20+ */
	}
	
	.searchlist-title {
		position: absolute;
	}
	
	.searchlist {
		
	}
	
	.sidebar-title {
		margin-bottom: 10px;
	}
	
	.sidebar-group {
		margin-bottom: 10px;
	}
	
	.action {
		width: 100%;
		margin-bottom: 10px;
	}
	
	.footer {
		clear: both;
	}
	</ui:style>

	<g:FlowPanel styleName="browse" addStyleNames="{style.browse}">
		<g:FlowPanel styleName="{style.content}">
			<g:Label styleName="h1" addStyleNames="browseTitle">
				<ui:msg description="Browser title">Browse</ui:msg>
			</g:Label>
			<m:BreadcrumbPanel ui:field="breadcrumb"
				addStyleNames="browseBreadcrumb" />
			<g:SimplePanel styleName="browseItemIcon"
				addStyleNames="{style.item_icon}" ui:field="itemIcon" />
			<g:Label styleName="h2" addStyleNames="browseItemText"
				ui:field="itemTitle" />
			<g:Label addStyleNames="browseItemDates" ui:field="itemDates" />
			<g:HTML ui:field="itemDescriptiveMetadata" addStyleNames="browseItemDescriptiveMetadata" />
			<g:Label styleName="{style.searchlist-title}" addStyleNames="h2"
				ui:field="fondsPanelTitle">
				<ui:msg>Items</ui:msg>
			</g:Label>
			<common:AIPList ui:field="fondsPanel" addStyleNames="{style.searchlist}" />
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.sidebar}">
			<g:FlowPanel styleName="{style.sidebar-group}" ui:field="sidebarGroupDownloads">
				<g:Label addStyleNames="h2 {style.sidebar-title}">
					<ui:msg>Downloads</ui:msg>
				</g:Label>
				<g:FlowPanel ui:field="downloadList">
				</g:FlowPanel>
			</g:FlowPanel>
			<g:FlowPanel styleName="{style.sidebar-group}">
				<g:Label addStyleNames="h2 {style.sidebar-title}">
					<ui:msg description="Browser actions">Actions</ui:msg>
				</g:Label>
				<g:Button addStyleNames="{style.action} btn btn-plus"
					ui:field="createItem">
					<ui:msg>New item</ui:msg>
				</g:Button>
				<g:Button addStyleNames="{style.action} btn btn-edit"
					ui:field="editMetadata">
					<ui:msg>Edit metadata</ui:msg>
				</g:Button>
				<g:Button addStyleNames="{style.action} btn btn-edit"
					ui:field="moveItem">
					<ui:msg>Move in hierarchy</ui:msg>
				</g:Button>
				<g:Button addStyleNames="{style.action} btn btn-edit"
					ui:field="editPermissions">
					<ui:msg>Edit permissions</ui:msg>
				</g:Button>
				<g:Button addStyleNames="{style.action} btn btn-play"
					ui:field="seeLog">
					<ui:msg>View PREMIS</ui:msg>
				</g:Button>
			</g:FlowPanel>
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.footer}" />
	</g:FlowPanel>
</ui:UiBinder>
<div>
	<h1>Disposal report nrÂº {{metadata.id}}</h1>
	<p>
		This disposal agreement created by {{metadata.createdBy}} on {{humanize metadata.createdOn}}, was
		approved on {{metadata.extraFields.approvedOn}} and signed by {{metadata.extraFields.approvedBy}},
		on the date defined below, allowing the destruction of {{metadata.numberOfAIPs}} records.
	</p>

	<hr>
	{{#if aips.length}}

    <div class="disposal-policy-summary">
	    <div class="gwt-HTML h4 disposal-policy-summary-icon" style=""><i class="fas fa-info-circle"></i></div>
	    <div class="gwt-Label h4 disposal-policy-summary-text">List of records to be destroyed</div>
    </div>

    <br>

	<table style="width: 100%;">
		<thead>
			<tr style="text-align: left;">
				<th>Level</th>
				<th>Name</th>
				<th>Collection</th>
				<th>Nr files</th>
				<th>Size</th>
				<th>Schedule id</th>
				<th>Hold id</th>
			</tr>
		</thead>
		<tbody>
			{{#each aips}}
			<tr>
				<td>{{aipLevel}}</td>
				<td>{{aipTitle}}</td>
				<td>{{aipCollection}}</td>
				<td>{{aipNumberOfFiles}}</td>
				<td>{{aipSize}}</td>
				<td>{{aipDisposalScheduleId}}</td>
				{{#if aipDisposalHoldIds.length}}
				<td>{{aipDisposalHoldIds}}</td>
				{{else}}
				<td></td>
				{{/if}}
			</tr>
			{{/each}}
		</tbody>
	</table>
	{{/if}}

    <br>
	<hr>

	{{#if schedules.length}}

    <div class="disposal-policy-summary">
    	<div class="gwt-HTML h4 disposal-policy-summary-icon" style=""><i class="fas fa-info-circle"></i></div>
        <div class="gwt-Label h4 disposal-policy-summary-text">Description of disposal schedules associated to a record</div>
    </div>


	{{#each schedules}}
	<br>

	<div class="wui-data-panel">
		<div class="browseItemPanelWithMargin">
			<div class="browseItemPanel">
			    <span class="h5">Disposal Schedule: {{title}}</span>
			</div>
			<div class="gwt-Label browseItemId" title="Identifier">Identifier: {{id}}
			</div>
			<div class="gwt-Label browseItemId">Created on {{humanize createdOn}} UTC by {{createdBy}}</div>
			<div class="gwt-Label browseItemId">Updated on {{humanize updatedOn}} UTC by {{updatedBy}}</div>
		</div>
		<div>
			<span class="label">Description: </span><span class="value">{{description}}</span>
		</div>
		<div>
			<span class="label">Mandate: </span><span class="value">{{mandate}}</span>
		</div>
		<div>
			<span class="label">Scope notes: </span><span class="value">{{scopeNotes}}</span>
		</div>
		<div>
			<span class="label">Action: </span><span class="value">{{actionCode}}</span>
		</div>
		<div>
			<span class="label">Retention trigger element identifier: </span><span class="value">{{retentionTriggerElementId}}</span>
		</div>
		<div>
			<span class="label">Retention period: </span><span class="value">{{retentionPeriodDuration}} {{retentionPeriodIntervalCode}}</span>
		</div>
	</div>
	<br>
	{{/each}}

	{{/if}}

	<hr>

	{{#if holds.length}}

	<div class="disposal-policy-summary">
        <div class="gwt-HTML h4 disposal-policy-summary-icon" style=""><i class="fas fa-info-circle"></i></div>
        <div class="gwt-Label h4 disposal-policy-summary-text">Description of disposal holds associated to a record</div>
    </div>

	<h5></h5>

	{{#each holds}}
    <br>
	<div class="wui-data-panel">
		<div class="browseItemPanelWithMargin">
		    <div class="browseItemPanel">
        	    <span class="h5">Disposal Hold: {{title}}</span>
        	</div>
			<div class="gwt-Label browseItemId" title="Identifier">Identifier: {{id}}
			</div>
			<div class="gwt-Label browseItemId">Created on {{humanize createdOn}} UTC by {{createdBy}}</div>
			<div class="gwt-Label browseItemId">Updated on {{humanize updatedOn}} UTC by {{updatedBy}}</div>
		</div>
		<div>
			<span class="label">Description: </span><span class="value">{{description}}</span>
		</div>
		<div>
			<span class="label">Mandate: </span><span class="value">{{mandate}}</span>
		</div>
		<div>
		    <span class="label">Scope notes</span><span class="value">{{scopeNotes}}</span>
		</div>
	</div>
    <br>
	{{/each}}

	{{/if}}

</div>